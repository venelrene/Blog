<h1>New Post</h1>

<div class="section">
  <%= simple_form_for @post do |f| %>

    <div class="field">
      <div class="control">
        <%= f.label :files %> <br>
        <%= image_tag f.variant(resize: "100x100") %>
        <%= f.file_field :files, multiple: true, label_html: { class: 'label' } %>
      </div>
    </div>
    <br>
    <div class="field">
      <div class="control">
        <%= f.input :title, input_html: { class: 'input' }, label_html: { class: 'label' } %>
      </div>
    </div>
    <br>

    <div class="field">
      <div class="control">
        <%= f.input :content, input_html: { class: 'textarea' }, label_html: { class: 'label' }  %>
      </div>
    </div>
    <%= f.button :submit, 'Create new post', class: "button is-primary" %>
  <% end %>
</div>